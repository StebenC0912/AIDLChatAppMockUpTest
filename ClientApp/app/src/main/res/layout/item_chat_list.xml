<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivChatItemAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/avatar_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvChatItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàng Chu Anh Vũ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvChatItemLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Em ăn cơm chưa nhỉ :))))"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/grey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChatItemTime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10:25"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvChatItemUnreadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="5"
            android:paddingHorizontal="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/shape_unread_number_message"/>
    </LinearLayout>
</LinearLayout>